{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@schema/*": [
        "packages/schema/src/*"
      ],
      "@ui/*": [
        "packages/ui/src/*"
      ],
      "@utils/*": [
        "packages/utils/src/*"
      ]
    }
  },
  "include": [
    "apps",
    "packages",
    "backend"
  ],
  "extends": "expo/tsconfig.base"
}
